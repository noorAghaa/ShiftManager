<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainPreWork">

    <TextView
        android:id="@+id/helo_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="24sp"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toTopOf="@+id/start_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Start"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:background="@drawable/purple_border_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shift_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Shifts"
        android:textColor="@color/purple"
        android:background="@drawable/purple_border"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/now_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/work_button"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/work_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Work"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple"
        android:background="@drawable/purple_border"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/now_button"
        app:layout_constraintEnd_toStartOf="@+id/shift_button"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/now_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Log Out"
        android:textColor="@color/white"
        android:background="@drawable/red_border"
        android:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="50dp" />


</androidx.constraintlayout.widget.ConstraintLayout>