<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainWorkMenu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Work Menu"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/salaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_salary"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="@string/salary_0"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/hourlySalaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_hourly_salary_0"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/salaryTextView"
            app:layout_constraintStart_toStartOf="@id/salaryTextView"
            app:layout_constraintTop_toBottomOf="@+id/salaryTextView"
            />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hourlySalaryTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exhBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/extra_hours"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            android:background="@drawable/purple_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timerTextView"
             />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/breakBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/breaks"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"
            android:background="@drawable/purple_border"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timerTextView"

            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sidBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/sick_days"
            android:textColor="@color/purple"
            android:background="@drawable/purple_border"
            app:layout_constraintTop_toBottomOf="@+id/breakBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/monthlyCalcBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/monthly_calc"
            android:textColor="@color/purple"
            android:background="@drawable/purple_border"
            app:layout_constraintTop_toBottomOf="@id/breakBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>