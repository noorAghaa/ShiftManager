<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name=".View.AddPreApprovedEmployeeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/companyNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/purple_border"
        android:hint="@string/company_name" />

    <EditText
        android:id="@+id/companyAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/purple_border"
        android:hint="@string/company_address" />

    <EditText
        android:id="@+id/companyPhoneNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/purple_border"
        android:hint="@string/company_phone_number"
        android:inputType="numberDecimal"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/companyWebsiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/purple_border"
        android:hint="@string/company_website" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/purple_border"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:text="@string/add" />

    <LinearLayout
        android:id="@+id/emailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>