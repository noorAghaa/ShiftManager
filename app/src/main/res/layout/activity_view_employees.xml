<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ViewEmployeesActivity">

    <!-- RecyclerView for displaying the list of employees -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/employeesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvNoEmployees"
        tools:listitem="@layout/employee_item" />

    <!-- TextView for showing a message when no employees are found -->
    <TextView
        android:id="@+id/tvNoEmployees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="You have no employees yet."
        android:gravity="center"
        android:visibility="gone"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black" />

</RelativeLayout>
